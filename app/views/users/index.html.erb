<div class="container">
    <div class="row">
            <div class="col-md-3" style="background-color: gray">
                <%= render 'list', user: @user %>
                <%= render 'books/list', book: @book, nbook: @nbook %>
            </div>

<!--get_profile_image-->
            <div class="col-md-8 offset-md-1">
                <h1>Users</h1>
                <table class="table table-striped">
                    <tr>
                        <th>image</th>
                        <th>name</th>
                        <th></th>
                    <% @users.each do |user| %>
                    <tr>
                            <td>
                                <%= image_tag user.get_profile_image(100,100) %>
                            </td>
                        <td><%= user.name %></td>
                        <td><%= link_to "Show", user_path(user.id) %></td>
                    </tr>
                <% end %>
                </table>
            </div>
    </div>
</div>
