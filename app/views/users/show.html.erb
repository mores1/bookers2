<div>
    <%= render 'list', user: current_user %>
    <%= render 'books/list', book: @book %>
</div>

<!-- ユーザーの投稿一覧 -->
<%= flash[:alart] %>
<h2>Books</h2>
<h4>Title</h4>
<h4>Opinion</h4>
<% @books.each do |book| %>
<div>
  <p>投稿ユーザー画像：<%= image_tag book.user.get_profile_image(100,100) %></p>
  <%= link_to book_path(book.id) do %>
  <%= book.title %>
  <% end %>
  <p><%= book.body %></p>
</div>
<% end %>